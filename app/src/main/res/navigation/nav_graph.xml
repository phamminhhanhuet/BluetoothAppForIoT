<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="com.micro.smarthome.StartFragment"
        android:label="@string/start_fragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_controlFragment"
            app:destination="@id/controlFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/startFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/controlFragment"
        android:name="com.micro.smarthome.ControlFragment"
        android:label="@string/control_fragment"
        tools:layout="@layout/fragment_control">
        <action
            android:id="@+id/action_controlFragment_to_InformationFragment"
            app:destination="@id/informationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.micro.smarthome.InformationFragment"
        android:label="@string/information_fragment"
        tools:layout="@layout/fragment_information">
        <action
            android:id="@+id/action_informationFragment_to_ControlFragment"
            app:destination="@id/controlFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popUpTo="@id/informationFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="contactPhone"
            app:argType="string"
            android:defaultValue="null"/>
        <argument
            android:name="contactEmail"
            app:argType="string"
            android:defaultValue="null"/>
        <argument
            android:name="isContactPhone"
            app:argType="boolean"
            android:defaultValue="true"/>
        <argument
            android:name="isContactEmail"
            app:argType="boolean"
            android:defaultValue="true"/>
        <argument
            android:name="isContactMes"
            app:argType="boolean"
            android:defaultValue="true"/>
    </fragment>
</navigation>