<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".InformationFragment">

    <androidx.appcompat.widget.Toolbar
        android:visibility="gone"
        android:id="@+id/toolbarInfor"
        card_view:title="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_200"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAvatarInformation"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/capture_avatar"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        card_view:civ_border_color="@color/colorPrimary"
                        card_view:civ_border_width="3dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="Full Name"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:textColor="@color/colorLightText"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>

                            <EditText
                                android:id="@+id/editUsernameInformation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:hint="Pham Hanh"
                                android:textColor="@color/colorLightText"
                                android:textColorHint="@color/colorLightText"
                                android:textSize="16sp"></EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtPhoneInformation"
                                android:text="Phone Mobile"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:textColor="@color/colorLightText"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                            <EditText
                                android:id="@+id/editPhoneInformation"
                                android:textColor="@color/colorLightText"
                                android:textColorHint="@color/colorLightText"
                                android:hint="0123456789"
                                android:focusable="false"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_height="wrap_content"></EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="Email"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:textColor="@color/colorLightText"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                            <EditText
                                android:id="@+id/editEmailInformation"
                                android:textColor="@color/colorLightText"
                                android:textColorHint="@color/colorLightText"
                                android:hint="xxxxx@gmail.com"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_height="wrap_content"></EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="Password"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:textColor="@color/colorLightText"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                            <EditText
                                android:id="@+id/editPasswordInformation"
                                android:textColor="@color/colorLightText"
                                android:textColorHint="@color/colorLightText"
                                android:hint="Password"
                                android:focusable="true"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_height="wrap_content"></EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewForgotPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txtForgotPasswordInformation"
                                android:text="Forgot Password?"
                                android:textColor="@color/colorLightText"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                            <EditText
                                android:id="@+id/editForgotPasswordInformation"
                                android:textColor="@color/colorLightText"
                                android:textColorHint="@color/colorLightText"
                                android:focusable="false"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_height="wrap_content"></EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorLightText"
                        android:text="Notification"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <CheckBox
                        android:id="@+id/checkPhoneInformation"
                        android:checked="false"
                        android:text="Through Call"
                        android:textSize="16sp"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorLightText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <CheckBox
                        android:id="@+id/checkEmailInformation"
                        android:checked="false"
                        android:text="Through Email"
                        android:textColor="@color/colorLightText"
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <CheckBox
                        android:id="@+id/checkMessageInformation"
                        android:checked="false"
                        android:text="Throught Message"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorLightText"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:id="@+id/confirmInformation"
                        android:text="Confirm"
                        android:textColor="@color/colorDark"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>